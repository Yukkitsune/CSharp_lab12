@page
@model CSharp_lab12.Pages.BookingP.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <div class="form-group">
                <label asp-for="Booking.ClientId" class="control-label"></label>
                <select asp-for="Booking.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Booking.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TourId" class="control-label"></label>
                <select asp-for="Booking.TourId" class="form-control" asp-items="ViewBag.TourId"></select>
                <span asp-validation-for="Booking.TourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.NumberOfPeople" class="control-label"></label>
                <input asp-for="Booking.NumberOfPeople" class="form-control" />
                <span asp-validation-for="Booking.NumberOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Description" class="control-label"></label>
                <input asp-for="Booking.Description" class="form-control" />
                <span asp-validation-for="Booking.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

