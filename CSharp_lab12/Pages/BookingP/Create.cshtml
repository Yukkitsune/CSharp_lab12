@page
@model CSharp_lab12.Pages.BookingP.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.ClientId" class="control-label"></label>
                <select asp-for="Booking.ClientId" class="form-control" asp-items="@(ViewData["ClientId"] as SelectList)"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TourId" class="control-label"></label>
                <select asp-for="Booking.TourId" class ="form-control" asp-items="@(ViewData["TourId"] as SelectList)"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.NumberOfPeople" class="control-label"></label>
                <input asp-for="Booking.NumberOfPeople" class="form-control" />
                <span asp-validation-for="Booking.NumberOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Description" class="control-label"></label>
                <input asp-for="Booking.Description" class="form-control" />
                <span asp-validation-for="Booking.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

